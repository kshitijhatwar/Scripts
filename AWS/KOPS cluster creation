#make sure you have your ssh key.
#make sure your NS is configured in hosted zone in AWS.
#It will create manefiest files in provided S3 bucket.
kops create cluster --name=kshitijhatwar.xyz --state=s3://kshitijhatwar-bucket --zones=ap-south-1a --node-count=2 --node-size=t3.small --control-plane-size=t3.medium --dns-zone=kshitijhatwar.xyz --node-volume-size=12 --control-plane-volume-size=12 --ssh-public-key /home/ubuntu/ksh.pub


#This command will start building cluster.
kops update cluster --name=kshitijhatwar.xyz --state=s3://kshitijhatwar-bucket --yes --admin



# This command will delete the cluster
kops delete cluster --name=kshitijhatwar.xyz --state=s3://kshitijhatwar-bucket --yes


